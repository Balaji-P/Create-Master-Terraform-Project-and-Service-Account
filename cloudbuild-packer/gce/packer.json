{
  "variables": {
    "project_id": "{{env `PROJECT_ID`}}",
    "source_image_family": "ubuntu-2004-lts",
    "machine_type": "n1-standard-1",
    "region": "northamerica-northeast1",
    "zone": "northamerica-northeast1-a"
  },
  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{user `project_id`}}",
      "machine_type": "{{user `machine_type`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "image_description": "Vault Base Image",
      "image_name": "vault-base",
      "disk_size": 25,
      "disk_type": "pd-ssd",
      "ssh_username": "sveronneau",
      "region": "{{user `region`}}",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["uname -a >> ~/sysinfo.txt"]
    }
    {
      "type": "shell",
      "inline": ["sudo aptg-get update -y ; sudo apt-get upgrade -y ; wget https://releases.hashicorp.com/vault/1.4.0/vault_1.4.0_linux_amd64.zip -P /usr/bin/ ; unzip /user/bin/vault_1.4.0_linux_amd64.zip"]
    }
  ]
}
