info:
  title: Single Google Compute Engine Machine
  description: Creates a virtual machine based on name, machine type, zone, subnetwork, custom CentOS packages, keyring and key selection. Use the DEFAULT value to set the value used in the template.

required:
  - machinetype
  - xpn_zone
  - xpn_subnetwork

properties:
  machinetype:
    title: Machine type
    type: string
    default: n1-standard-4
    enum:
      - n1-highcpu-4
      - n1-highmem-2
      - n1-standard-1
      - n1-standard-2
      - n1-standard-4
      - n1-highmem-4
      - n1-highmem-8
      - n1-highcpu-2
      - n1-highcpu-8
      - f1-micro
      - g1-small
  image_project_id:
    title: Image Family Project ID
    type: string
    default: bnc-shared-images
  image_family:
    title: Image Family
    type: string
    default: dm-vm
  xpn_project_id:
    title: VPC Project ID
    type: string
    default: host-vpc-nonprod
  xpn_subnetwork:
    title: VPC
    type: string
    default: nonprod-mtl-dmz-fm
  xpn_zone:
    title: VPC Zone
    type: string
    default: northamerica-northeast1-c
  xpn_region:
    title: VPC Region
    type: string
    default: northamerica-northeast1
  packages:
    title: Install CentOS7 packages (separate them by a space)
    type: string
