info:
  title: Single Google Compute Engine Machine
  description: Creates a virtual machine based on name, machine type, zone, subnetwork, custom CentOS packages, keyring and key selection.

required:
  - machinetype
  - zone
  - subnetwork

properties:
  machinetype:
    title: Machine type
    type: string
    enum:
      - n1-highcpu-4
      - n1-highmem-2
      - n1-standard-1
      - n1-standard-2
      - n1-standard-4      
      - n1-highmem-4
      - n1-highmem-8
      - n1-highcpu-2
      - n1-highcpu-8
      - f1-micro
      - g1-small
  subnetwork:
    title: Reseau
    type: string
    enum:
      - tj4h-shared-services-xpn1-subnet1
  zone:
    title: Zone
    type: string
    enum:
      - northamerica-northeast1-c
      - europe-west1-d
  packages:
    title: Install CentOS7 packages (separate them by a space)
    type: string
  keyring:
    title: Global KeyRing
    type: string
    enum:
      - one_ring_to_rule_them_all
  cyptokey:
    title: CryptoKey
    type: string
    enum:
      - my_precious
